rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /workers/{workerId} {
      allow read: if true;
      // Allow authenticated users to create a worker document
      allow create: if request.auth != null;
      // Allow a worker to update their own document.
      allow update: if request.auth != null && request.auth.uid == workerId;
    }

    match /service_requests/{requestId} {
      // Allow authenticated users to create service requests
      allow create: if request.auth != null;
      // Allow authenticated users and workers to read service requests
      allow read: if true;
      // Allow a worker to update a service request to accept it.
      allow update: if resource.data.status == 'pending';
    }

    match /bookings/{bookingId} {
      // Allow workers to create bookings.
      allow create: if true;
      // Allow users to read their bookings.
      allow read: if request.auth != null;
    }

    match /notifications/{notificationId} {
      // Allow workers to create notifications.
      allow create: if true;
    }
  }
}
